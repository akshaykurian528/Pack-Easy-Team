<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/title_view"
        android:textAlignment="center"
        android:text="Pack-Easy Reminder"
        android:fontFamily="@font/allura_regular"
        android:textColor="@color/d_black"
        android:textSize="35sp"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/alarm" />

    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/01/2001"
        android:textAlignment="center"
        android:textColor="@color/d_black"
        android:fontFamily="@font/ibmplexsans_regular"
        android:textSize="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/d_black"
        android:fontFamily="@font/ibmplexsans_regular"
        android:textSize="15dp"
        android:text="Select Trip Date" />

    <TextView
        android:id="@+id/selectedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01 : 01 AM"
        android:textAlignment="center"
        android:textColor="@color/d_black"
        android:fontFamily="@font/ibmplexsans_regular"
        android:textSize="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/d_black"
        android:fontFamily="@font/ibmplexsans_regular"
        android:textSize="15dp"
        android:text="Select Time When You Leave From Home" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setAlarmBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="Set Alarm"
            android:textColor="@color/d_black"
            android:fontFamily="@font/ibmplexsans_regular"
            android:background="@drawable/reminder_button"
            android:textSize="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dismissBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="Dismiss"
            android:textColor="@color/d_black"
            android:fontFamily="@font/ibmplexsans_regular"
            android:background="@drawable/reminder_button"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
